# Environment Variables Example
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=3000
NODE_ENV=development

# API Configuration
PING_MESSAGE=pong

# Email Configuration
# Set SMTP_ENVIRONMENT to "production", "preproduction", or "auto" to derive from NODE_ENV
SMTP_ENVIRONMENT=preproduction
# Override these values if different credentials or hostnames are required
SMTP_HOST=
SMTP_PORT=25
SMTP_USER=
SMTP_PASS=
SMTP_CLIENT_NAME=axa-application
# Set to false to skip certificate validation when using internal certificates
SMTP_REJECT_UNAUTHORIZED=true
# Optional default sender if not provided per request
SMTP_DEFAULT_FROM=

# Database Configuration (if needed in the future)
# DATABASE_URL=your_database_url_here

# Authentication / Auth0 Configuration
# Auth0 tenant details for integration
AUTH0_DOMAIN=
AUTH0_CLIENT_ID=
AUTH0_CLIENT_SECRET=
# Optional audience for API access tokens (defaults to the Management API)
AUTH0_AUDIENCE=
# Database connection name configured in Auth0 (e.g. Username-Password-Authentication)
AUTH0_DB_CONNECTION=
# JWT_SECRET=your_jwt_secret_here
# BCRYPT_SALT_ROUNDS=10

# Frontend feature flags
# Enable authentication flows and protected API calls in the SPA
VITE_ENABLE_AUTH=false

# External API Keys (if needed in the future)
# API_KEY=your_api_key_here

# Builder.io public content API key used to fetch hosted assets
VITE_PUBLIC_BUILDER_KEY=251da8f29625434a8c872a9913dedea9
